[alias]
    ci    = commit                                                                                                       
    co    = checkout                                                                                                     
    st    = status                                                                                                       
    br    = branch                                                                                                       
    lg    = log --graph --oneline --decorate --all                                                                       

[color]
	ui = auto

[core]
	editor = vim

